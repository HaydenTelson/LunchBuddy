<html>
    <head>
        <title>DropBy</title>
        <link href="css/DropByCSS.css" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        {{> facebook}}
	    <script src="/js/facebook.js"></script>
    </head>

    <script src="https://code.jquery.com/jquery.js"></script>
    
    <body style="background-color: #F3E8EE;">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <div class="login">
            <div id="homeHeader">
            <img src= "./images/DropByLogo.png" style="width:180px;height:180px;">
            </div>

            <form class="box" action="/home">
                <input type="text" name="username" placeholder="Username" required> <br>
                <input type="password" name="password" placeholder="Password" required> <br>
                <input type="submit" name="" value="Login">
                <input type="submit" name="" value="Sign Up">
            </form>

            <center>
                <p class="facebookLogin">Or login through Facebook <br>
					<fb:login-button scope="public_profile,email" onlogin="checkLoginState();" href="/home"> </fb:login-button>
                    
			</p>
            </center>



        </div>
    </body>
</html>