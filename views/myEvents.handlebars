            Date: {{this.date}}<br>
            <button class="showEventBtn" id="{{this.id}}">Toggle Details</button>
            <div class="testing" id ="hiddenEventInfo" style="display:none">
            Location: {{this.location}}<br>
            Time: {{this.time}}<br>
            Price: {{this.price}}<br>
